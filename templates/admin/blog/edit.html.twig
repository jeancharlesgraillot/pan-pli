{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un article{% endblock %}

{% block body %}

    <div class="container">

        <div class="bg-light p-4 greyBoxShadow">

            <h1 class="mb-4">Modifier l'article {{ article.title }}</h1>

            {% if article.coverImage is not null %}
                <img class="mb-3 w-50" src="{{ article.coverImage }}">
            {% endif %}

            {{ form_start(form) }}

            {{ form_widget(form) }}

            <button method="submit" class="btn btn-primary mt-2">Enregistrer les modifications</button>

            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}