{% extends 'admin/base.html.twig' %}

{% block title %}Administration des rôles{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Gestion des rôles</h1>
        <a href="{{ path('admin_roles_create') }}" class="btn btn-primary rounded mt-3 mb-5">Ajouter un rôle</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for role in pagination.data %}
                <tr>
                    <td>{{ role.id }}</td>
                    <td>{{ role.title }}</td>
                    <td>
                        <a href="{{ path('admin_roles_edit', {'id': role.id })}}" class="btn btn-secondary rounded"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_roles_delete', {'id': role.id })}}" class="btn btn-danger rounded"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        {% include 'admin/partials/pagination.html.twig' with {'route': 'admin_roles_index'} %}

    </div>
{% endblock %}
