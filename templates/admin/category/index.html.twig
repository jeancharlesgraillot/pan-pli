{% extends 'admin/base.html.twig' %}

{% block title %}Administration des catégories{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Gestion des catégories</h1>
        <a href="{{ path('admin_categories_create')}}" class="btn btn-primary rounded mt-3 mb-5">Ajouter une catégorie</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in pagination.data %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.slug }}</td>
                    <td>
                        <a href="{{ path('admin_categories_edit', {'id': category.id })}}" class="btn btn-secondary rounded"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_categories_delete', {'id': category.id })}}" class="btn btn-danger rounded"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        {% include 'admin/partials/pagination.html.twig' with {'route': 'admin_categories_index'} %}

    </div>
{% endblock %}
