{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

<div class="container mt-5">

    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="bg-light py-3 px-3">
                <h1>Connectez-vous !</h1>
                {% if hasError %}
                <div class="alert alert-danger">
                    <p>Erreur: mauvaise(s) information(s) entr√©e(s) !</p>
                </div>
                {% endif %}
                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" required value ="{{username}}" placeholder="Adresse email...">

                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" required placeholder="Mot de passe...">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
